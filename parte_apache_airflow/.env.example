# Environment variables for AlertaUTEC Airflow on ECS
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Airflow Configuration
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=change-this-password
AIRFLOW_ADMIN_EMAIL=admin@utec.edu.pe

# Database Configuration (will be fetched from SSM Parameter Store in ECS)
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow_admin:password@rds-endpoint:5432/airflow

# Webserver Secret Key (generate with: python3 -c 'import secrets; print(secrets.token_hex(32))')
AIRFLOW__WEBSERVER__SECRET_KEY=generate-a-secret-key-here

# DynamoDB Configuration
DYNAMODB_TABLE=Incidents

# S3 Configuration
S3_BUCKET=alerta-utec-airflow-ACCOUNT_ID

# ECS Configuration
ECS_CLUSTER_NAME=alerta-utec-airflow-cluster
ECR_REPOSITORY=alerta-utec-airflow

# ALB Configuration
ALB_DNS_NAME=will-be-set-after-deployment
